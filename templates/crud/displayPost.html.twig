{% extends "@FOSUser/layout.html.twig" %}

{% block title %}Display Post{% endblock %}

{% block stylesheets %}
        <link href="{{ asset('bootstrap/css/bootstrap.css') }}" rel="stylesheet" />
{% endblock %}

{% block body %}
<div class="container">
	<article>
		<header>
		    <h2> {{ post.title }} </h2>

		    <p>publié le : {{post.published | date("d/m/Y")}}
		    {% if(post.published != post.updated)%}
		    	 | Modifié le : {{post.updated| date("d/m/Y")}}</p>

		    {%endif%}
		    	
	    </header>
	    <img src="/images/posts/{{post.filename}}" alt="card-img-top" style="width: 50%; height:auto;">
	    <p>
	    	{{post.content}}
	    </p>
	</article>

	<a href="{{ path('homepage')}}" type="button" class="btn btn-secondary">Retour</a>
</div>
{% endblock %}
